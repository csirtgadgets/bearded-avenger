                        port:py${python.version}-yaml

post-destroot {
  # documentation and examples
  xinstall -m 644 -W ${worksrcpath} README.md contributing.md COPYING  \
    ${destroot}${prefix}/share/doc/${name}

}

python.link_binaries_suffix
